<div class="login">
    <h6 class="pl-2">
        <a :href="DOMAIN" style="color: rgb(0, 85, 255);">Trang chủ</a>
        »
        <a href="#" style="color: rgb(0, 85, 255);">Đăng nhập</a>
    </h6>
    <hr color="blue" style="margin: 2px; height: 0.3px;">

    <div class="card p-4 d-flex mx-auto mt-3" style="max-width: 600px; width: 100%;">
        <h3 class="text-center mb-4">ĐĂNG NHẬP</h3>
        <form @submit.prevent="login">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="loginEmail" v-model="loginEmail" placeholder="Nhập email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <input type="password" class="form-control" id="loginPassword" v-model="loginPassword" placeholder="Nhập mật khẩu" required>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <a href="#" class="text-decoration-none">Quên mật khẩu</a>
                <a :href="DOMAIN+'register'" class="text-decoration-none">Đăng ký</a>
            </div>
            <button type="submit" class="btn btn-warning w-100 fw-bold">Đăng nhập</button>
        </form>
    </div>

</div>
<div class="result-search-comic p-2">
    <div class="list m-2">
        <h4 class="mb-3" style="color: rgb(0, 85, 255);">LuongSoSad - Kết quả tìm kiếm ></h4>

        <!-- Danh sách truyện -->
        <div class="row">
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-custom mb-4" v-for="idx in per_page" :key="idx">
                <div class="card-comic" v-if="(page-1)*per_page + idx-1 < comics_search_result.length">
                    <div class="card-comic-img">
                        <a :href="DOMAIN+'detail-comic?id=' + comics_search_result[(page-1)*per_page + idx-1].slug">
                            <img :src="domain_image + '/uploads/' + imgage_comics[(page-1)*per_page + idx-1]"
                                :alt="comics_search_result[(page-1)*per_page + idx-1].name">
                        </a>
                        <div class="info-comic">
                            <div class="d-flex justify-content-center">
                                <div class="d-flex mr-3">
                                    <i style="font-size: 12px;" class="bi bi-eye mr-1"></i>
                                    <div style="font-size: 12px;">174K</div>
                                </div>
                                <div class="d-flex mr-3">
                                    <i style="font-size: 12px;" class="bi bi-chat-fill mr-1"></i>
                                    <div style="font-size: 12px;">12K</div>
                                </div>
                                <div class="d-flex">
                                    <i style="font-size: 12px;" class="bi bi-heart-fill mr-1"></i>
                                    <div style="font-size: 12px;">204</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="font-size: 19px;">
                        <a :href="DOMAIN+'detail-comic?id=' + comics_search_result[(page-1)*per_page + idx-1].slug">
                            [[ comics_search_result[(page-1)*per_page + idx-1].name ]]
                        </a>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div style="font-size: 14px;">Chapter 523</div>
                        <i style="font-size: 12px; color: #a2a1a1;">2 giờ trước</i>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div style="font-size: 14px;">Chapter 523</div>
                        <i style="font-size: 12px; color: #a2a1a1;">2 giờ trước</i>
                    </div>
                </div>
            </div>
        </div>



        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item"><a @click="changeCurrentPage($event)" class="page-link" href="#">«</a>
                </li>

                <li class="page-item" v-for="pg in total_page" :key="pg" :class="{ active: page == pg }">
                    <a @click="changeCurrentPage($event)" class="page-link" href="#">[[ pg ]]</a>
                </li>

                <li class="page-item"><a @click="changeCurrentPage($event)" class="page-link" href="#">»</a>
                </li>
            </ul>
        </nav>

    </div>
</div>
<div class="list p-2">
    <h4 class="mb-3" style="color: rgb(0, 85, 255);">LuongSoSad - Đọc truyện tranh miễn phí ></h4>

    <!-- Danh sách truyện -->
    <div class="row">
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-custom mb-4" v-for="(comic, index) in comics_update"
            :key="index">
            <div class="card-comic">
                <div class="card-comic-img">
                    <a :href="DOMAIN+'detail-comic?id=' + comic.slug">
                        <img :src="domain_image + '/' + imgage_comics[index]" :alt="comic.name">
                    </a>
                    <div class="info-comic">
                        <div class="d-flex justify-content-center">
                            <div class="d-flex mr-3">
                                <i style="font-size: 12px;" class="bi bi-eye mr-1"></i>
                                <div style="font-size: 12px;">174K</div>
                            </div>
                            <div class="d-flex mr-3">
                                <i style="font-size: 12px;" class="bi bi-chat-fill mr-1"></i>
                                <div style="font-size: 12px;">12K</div>
                            </div>
                            <div class="d-flex">
                                <i style="font-size: 12px;" class="bi bi-heart-fill mr-1"></i>
                                <div style="font-size: 12px;">204</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="font-size: 19px;">
                    <a :href="DOMAIN+'detail-comic?id=' + comic.slug">
                        [[ comic.name ]]
                    </a>
                </div>
                <div class="d-flex justify-content-between" v-if="comic.chaptersLatest">
                    <a :href="DOMAIN + 'read-comic?id='+comic.chaptersLatest[0].chapter_api_data.split('/').pop()+'&'+'num='+comic.chaptersLatest.chapter_name" style="font-size: 14px; color: black;">Chapter [[ comic.chaptersLatest[0].chapter_name ]]</a>
                    <i style="font-size: 12px; color: #a2a1a1;">[[ formatTimeDifference(comic.updatedAt) ]]</i>
                </div>
            </div>
        </div>
    </div>




    <nav>
